extends ../layouts/default
include ../helpers/mixins

block variables
	- const title = "Web services title"

block content
	.start__section.service-intro.section
		.container
			.hashtag
				a(href="#").hashtag__item #Аналитика
				a(href="#").hashtag__item #Дизайн
				a(href="#").hashtag__item #Фронтэнд
				a(href="#").hashtag__item #Бэкэнд
			.start
				.start__desc
					.start__title.service-intro__title.title__99
						!='Сайты, веб-сервисы и&nbsp;корпоративный софт'
				a.cases__show-more.service-intro__cases(href="#") Кейсы

	.price
		.container 
			.price__title.title__65 Сколько стоит разработать у&nbsp;нас <span>сайт&nbsp;или веб-сервис<span>
			.price__cards
				.price__card.price-card
					.price-card__name.title__35 Сайт
						.price-card__text.text__18
					.price-card__cost.title__65!= '> 2 млн'
						.price-card__desc MVP - от 3 мес
					a(href="#").price-card__btn.btn--small посчитать точно

				.price__card.price-card
					.price-card__name.title__35 Веб-сервис
						.price-card__text.text__18 со сложными интеграциями
					.price-card__cost.title__65!= '> 2 млн'
						.price-card__desc MVP - от 3 мес
					a(href="#").price-card__btn.btn--small посчитать точно

				.price__card.price-card
					.price-card__name.title__35 CRM, ERP, PDM
						.price-card__text.text__18
					.price-card__cost.title__65!= '> 3.5 млн'
						.price-card__desc от 5 мес
					a(href="#").price-card__btn.btn--small посчитать точно	


	#developing__section.developing__section.technologies.section
		.container
			.developing__title.developing__title--web.title__99
				!= 'Технологии'
			.developing__subtitle.title__35
				!= 'В команде <span>60+ специалистов</span>, все находимся под одной крышей. Работаем с современным стеком:'
			.developing
				.developing__item.technologies__card
					.developing__item__title 
						!="Бэкенд"
					.developing__item__list
						ul
							li
								!="PHP"
							li
								!="Laravel"
				.developing__item.technologies__card
					.developing__item__title 
						!="Фронтенд"
					.developing__item__list
						ul
							li
								!="ES6+"
							li
								!="React"

				.developing__item.technologies__card
					.developing__item__title 
						!="Аналитика и дизайн"
					.developing__item__list
						ul
							li
								!="Miro"						
							li
								!="Figma"


				.developing__item.technologies__card
					.developing__item__title 
						!="Методологии и инструменты"
					.developing__item__list
						ul
							li
								!="Agile"
							li
								!="Waterfall"
							li
								!="Гибрид"
							li
								!="Kanban"

				.developing__item.technologies__card
					.developing__item__title 
						!="Контроль версий, доставки и окружения"
					.developing__item__list
						ul
							li
								!="Git"

				.developing__item.technologies__card
					.developing__item__title 
						!="Популярные БД"
					.developing__item__list
						ul
							li
								!="MySQL"

	.cooperation
		.container 
			.cooperation__title.title__65 Практикуем 2 модели <br><span>сотрудничества:<span>
			.cooperation__cards
				.cooperation__card
					.cooperation__subtitle.title__35 Timе and Material
					.cooperation__text.title__35 Сложным проектам с&nbsp;высокой неопределенностью и&nbsp;гибким планированием
				.cooperation__card
					.cooperation__subtitle.title__35 Fixed Price
					.cooperation__text.title__35 Подходит проектам со&nbsp;строгим ТЗ, предсказуемыми сроками бюджетом

	.process
		.container 
			.process__title.title__65 Дальше подробно о&nbsp;том, <span>как мы работаем</span>
			.process__cards
				.process__card.process__card--1.process-card
					.process-card__num 1
					.process-card__content
						.process-card__title.title__35 Анализируем рынок
						.process-card__text.text__18 Изучаем вашу нишу, аудиторию и конкурентов. На этом этапе мы состыковываемся в видении и продумываем приложение от и до. Выдвигаем гипотезы, которые помогут достичь результата и реализовываем их при разработке

				.process__card.process__card--2.process-card
					.process-card__num 2
					.process-card__content
						.process-card__title.title__35 Проектируем
						.process-card__text.text__18 Создаем интерактивную версию будущего продукта — прототип. Он нужен, чтобы еще до разработки показать, каким будет приложение. На этом этапе можем провести кастдев и получить обратную связь от аудитории

				.process__card.process__card--3.process-card
					.process-card__num 3
					.process-card__content
						.process-card__title.title__35 Дизайним
						.process-card__text.text__18 Продумываем концепцию, прорабатываем UX/UI, отрисовываем 3D и анимации. Наш дизайн занимает призовые места в конкурсах, но мы умеем не только красиво, но и уместно

				.process__card.process__card--4.process-card
					.process-card__num 4
					.process-card__content
						.process-card__title.title__35 Программируем
						.process-card__text.text__18 Проектируем архитектуру, структуру базы данных, документируем API. Пишем чистый код — продукт будет легко поддерживать

				.process__card.process__card--5.process-card
					.process-card__num 5
					.process-card__content
						.process-card__title.title__35 Тестируем
						.process-card__text.text__18 На каждом этапе, чтобы ни один баг не прошел! Приложения не тормозят, потому что мы заранее подготавливаем его к высоким нагрузкам

				.process__card.process__card--6.process-card
					.process-card__num 6
					.process-card__content
						.process-card__title.title__35 Запускаем
						.process-card__text.text__18 Разворачиваем проект на вашем сервере, наполняем контентом

				.process__card.process__card--7.process-card
					.process-card__num 7
					.process-card__content
						.process-card__title.title__35 Поддерживаем и развиваем
						.process-card__text.text__18 Составляем roadmap, формируем бэклоги на следующие спринты, выпускаем обновления каждые 2 недели

			.process__text.title__35 Если у вас есть своя команда — не проблема. Мы можем курировать работу ваших разработчиков, работать с ними в коллаборации или просто усилить ребят. Берем на себя ведущую роль — создаем общий чат, распределяем зоны ответственности, решаем вопросы по дедлайнам и качеству.