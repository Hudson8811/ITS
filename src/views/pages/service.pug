extends ../layouts/default
include ../helpers/mixins

block variables
	- const title = "Услуги";

block content
	section.section.service-intro
		.service-intro__bg
			img(src="img/services/services_slider_bg_3.webp")
		.container.service-intro__container
			.service-intro__img
				img(src="img/services/services_slider_img_3.webp")
			h2.service-intro__title.title__99 Веб разработка <span>в ITS GROUP</span>
			.service-intro__tags
				.service-intro__tag Аналитика, исследования
				.service-intro__tag UI/UX
				.service-intro__tag Адаптивный дизайн
			.service-intro__text.text__18
				p Реализуем проекты для госструктур, крупного и среднего бизнеса
				p Знаем, как создавать цифровые сервисы, которые действительно решают ваши задачи
			.service-intro__bottom
				a.service-intro__btn.bordered-btn.bordered-btn--white(href="#tell-us")
					span Оставить заявку
				hr.service-intro__line

