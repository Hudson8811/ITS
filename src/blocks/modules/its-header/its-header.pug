header.its-header
	.its-header__left.its-header__side

		a(href="index.html").its-header__logo 
			img(src="img/logo.png" alt="logo")
		.its-header__menu
			a(href="#cases__section").its-header__menu__item.js-header__menu__item Кейсы<sup>+1</sup>
			a(href="#").its-header__menu__item.js-header__menu__item Экспертиза
