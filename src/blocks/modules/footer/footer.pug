							.tell-us__QR__title
								!="Если удобнее, пишите в телеграмм"
							.tell-us__QR__picture
								img(src="img/qr.png" alt="",)
					.tell-us__col
						form.form.js-contact-form(method="POST")
							input(type="hidden" name="mode" value="mail-request")
							.form-field(style="display:none;")
								input(type="text" name="tel" value="")
							.form__title
								!="Какие задачи перед нами <br>стоят?"
							.form__checkbox
								label.checkbox
									input.custom-checkbox(type="checkbox" name="subjects[]" value="Корпоративный сайт")
									span Корпоративный сайт
								label.checkbox
									input.custom-checkbox(type="checkbox" name="subjects[]" value="Интернет-магазин")
									span Интернет-магазин
								label.checkbox
									input.custom-checkbox(type="checkbox" name="subjects[]" value="Корпоративный портал")
									span Корп. портал
								label.checkbox
									input.custom-checkbox(type="checkbox" name="subjects[]" value="Личный кабинет")
									span Личный кабинет
								label.checkbox
									input.custom-checkbox(type="checkbox" name="subjects[]" value="Интернет-каталог")
									span Интернет-каталог

								label.checkbox
									input.custom-checkbox(type="checkbox" name="subjects[]" value="Мобильное приложение")
									span Мобильное приложение
							.contacts__form
								.contacts__form__input-block
									input(type="text" name="fio" required).contacts__form__input.text__13
									.contacts__form__input-block__name 	Имя и фамилия*
									.contacts__form__input-block__error Неправильное имя
								.contacts__form__input-block
									input(type="tel" name="contact" required).contacts__form__input.js-mask-phone
